{% block work %}
	{% if 'ROLE_ADMIN' in app.user.roles %}
		<h1>Image</h1>

		<table class="table">
			<tbody>
				<tr>
					<th>Id</th>
					<td>{{ image.id }}</td>
				</tr>
				<tr>
					<th>Title</th>
					<td>{{ image.title }}</td>
				</tr>
				<tr>
					<th>Description</th>
					<td>{{ image.description }}</td>
				</tr>
				<tr>
					<th>CreateDate</th>
					<td>{{ image.createDate ? image.createDate|date('Y-m-d H:i:s') : '' }}</td>
				</tr>
				<tr>
					<th>Image</th>
					<td><img src="{{ asset ('uploads/images/users/')~ image.image }}" alt="Mountains" style="width:100%; height: 300px; margin-bottom: 10px;"></td>
				</tr>
			</tbody>
		</table>
	{% else %}
		<section id="container">
			<section id="content">
				<div class="thumbnail" style="background-image: url({{ asset ('uploads/images/users/')~ image.image }});"></div>
				<div class="title">{{ image.title }}</div>
				<div class="metadata">
					<div class="location">{{ image.creator.email }}</div>
					<div class="type">{{ image.createDate ? image.createDate|date('Y-m-d H:i:s') : '' }}</div>
				</div>
				<h2>Description :</h2>
				<p>{{ image.description }}</p>


			</section>
			<div id="container-footer">
				<div class="accent accent-1" style="transform: translate3d(0px, -1001px, 0px);">
					<div></div>
				</div>
				<div class="accent accent-2" style="transform: translate3d(0px, -1158px, 0px);">
					<div></div>
				</div>
				<section id="community">
					<div class="wrapper">
						<div class="title">Vous souhaitez commenter</div>
						<div class="subtitle">cette image ?</div>
						

						<div class="col-md-12">
							<div class="comments-list">
								{% for com in image.commentaires %}
									<div class="media">
										<p class="pull-right">
											<small>5 days ago</small>
										</p>
										<div class="media-body">

											<h4 class="media-heading user_name">{{ com.user.email }}</h4>
											{{ com.Contenu }}

										</div>
									</div>
								{% endfor %}
							</div>


						</div>
						
						{{ form_start(form) }}
						<div class="description">Ajouter un nouveau commentaire</div>
						{{ form_widget(form) }}
						<div class="cta-wrapper">
							<button class="cta-btn cta-1" style="width: 250px; color:#fff;    border: none;">{{ button_label|default('Envoyer') }}</button>
						</div>
						{{ form_end(form) }}
						{# <div class="cta-wrapper">
													<a href="/soutenir-un-projet" class="cta-btn cta-1">Soutenir ce projet</a>
												</div> #}
					</div>
				</section>
				<section id="projects">
					<div class="title">
						<span>Découvrez</span>
						les images de ce utilisateur</div>
					<div class="arrows">
						<button class="slick-prev slick-arrow" aria-label="Previous" type="button" style="">Previous</button>
						<button class="slick-next slick-arrow" aria-label="Next" type="button" style="">Next</button>
					</div>
					<div class="projects slick-initialized slick-slider">
						<div class="slick-list draggable">
							<div class="slick-track" style="opacity: 1; width: 45000px; transform: translate3d(0px, 0px, 0px);">
								{% for image in images %}
									<div class="project slick-slide" data-slick-index="0" aria-hidden="true" tabindex="-1">
										<a href="{{ path('image_show', {'id': image.id}) }}" tabindex="-1">
											<div class="info">
												<div class="type">{{ image.createDate ? image.createDate|date('Y-m-d H:i:s') : '' }}</div>
												<div class="title">{{ image.title }}</div>
											</div>
											<div class="thumbnail" style="background-image: url({{ asset ('uploads/images/users/')~ image.image }});"></div>
										</a>
									</div>
								{% endfor %}
							</div>
						</div>
					</div>
					<div class="cta-wrapper">
						<a class="cta-btn" href="{{ path('image_index') }}">Liste des images</a>
					</div>
				</section>

			</div>
		</section>
	{% endif %}

	{% if 'ROLE_ADMIN' in app.user.roles %}
		<a href="{{ path('image_index') }}">back to list</a>
		<a href="{{ path('image_edit', {'id': image.id}) }}">edit</a>
		{{ include('image/_delete_form.html.twig') }}
	{% endif %}

