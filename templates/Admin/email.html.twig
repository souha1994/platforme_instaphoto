{%  extends 'base2.html.twig' %}
{% block mail %}


    <div class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-8">
                    <div class="card">
                        <div class="card-header card-header-primary">
                            <h4 class="card-title">Send Email</h4>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                {{ form_start(f) }}
                                <div class="form-group mb-3">
                                    <label class="control-label" for="form_title">To:</label>
                                    {{ form_widget(f.sendto,{'attr':{'type':'text','class':'form-control', 'value':email}}) }}
                                </div>

                                <div class="form-group mb-3">
                                    <label class="control-label" for="form_title">Subject:</label>
                                    {{ form_widget(f.subject,{'attr':{'type':'text','class':'form-control'}}) }}
                                </div>
                                <div class="note-dropzone">
                                    <label class="control-label" for="form_description">Body:</label>
                                    {{ form_widget(f.object,{'attr':{'type':'textarea','class':'form-control', 'style' : 'width:200px','rows' : '5',
                                        'cols' : '10'}}) }}
                                </div>
                                <div>
                                    {{ form_widget(f.Submit,{'attr':{'type':'submit','class':'btn btn-primary pull-right'}}) }}
                                </div>
                                {{ form_end(f) }}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


{% endblock%}